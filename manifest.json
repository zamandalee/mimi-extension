{
  "name": "Mimi",
  "description": "A client-side password manager",
  "author": "Mason Zhang & Amanda Lee",
  "version": "1.0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "css": [],
      "js": ["js/content-script.js"]
    }
  ],
  "permissions": [
    "storage", "activeTab", "scripting", "management"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo48.png",
      "128": "images/logo128.png"
    }
  },
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "commands": {
    "reload" : {
        "hash_masterpass": {
          "suggested_key": "Ctrl+Shift+p",
          "description": "Trigger hashing to produce the user's password"
        }
        "suggested_key": {
             "default": "Ctrl+Shift+R",
             "mac": "Command+Shift+Y"
        },
        "description": "Save a link"
    },
    "random": {
        "suggested_key": {
            "default": "Alt+Shift+L"
        },
        "description": "Load a random link"
    }
}
}